    <title>Pré-Organização do Feed</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            text-align: center;
            position: relative; /* Permite posicionar a logo na imagem */
        }

        /* Estilos semelhantes ao Instagram para o cabeçalho */
        .header {
            background-color: #3897f0;
            color: white;
            padding: 16px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .header h1 {
            font-size: 24px;
            margin: 0;
        }

        /* Estilos para o perfil */
        .profile {
            display: flex;
            align-items: center;
            margin: 20px 0;
            justify-content: center;
        }

        .logo img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-right: 20px;
        }

        .profile-info {
            text-align: left;
        }

        .profile-info h2 {
            font-size: 20px;
            margin: 0;
        }

        .profile-info p {
            font-size: 16px;
            margin: 0;
        }

        /* Estilos para o feed de imagens */
        .feed {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            max-width: 800px;
            margin: 20px auto;
            padding: 10px;
            background-color: white;
            border: 1px solid #ccc;
        }

        .grid-item {
            background-color: #ddd;
            border: 1px solid #999;
            overflow: hidden;
            text-align: center;
            position: relative;
        }

        .grid-item img {
            max-width: 100%;
            max-height: 100%;
            width: auto;
            height: auto;
            display: block;
            object-fit: contain;
        }

        .delete-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background: red;
            color: white;
            border: none;
            cursor: pointer;
        }

        /* Estilos para a logo na imagem salva */
        .page-logo {
            position: absolute;
            bottom: 10px;
            right: 10px;
            width: 100px; /* Ajuste o tamanho da sua logo na imagem salva */
        }

        /* Estilos para os botões de ação */
        .action-buttons {
            margin: 20px auto;
        }

        .add-button, .save-button {
            background-color: #3897f0;
