<body>
    <div class="header">
        <h1>Pré-Organização do Feed</h1>
    </div>
    
    <div class="profile">
        <div class="logo"><img src="https://i.ibb.co/9s013ms/zyro-image-png.jpg" alt="Sua Logo"></div>
        <div class="profile-info">
            <h2>Metafusion</h2>
            <p>Marketing Digital</p>
        </div>
    </div>

    <div class="action-buttons">
        <button class="add-button" id="add-button">Adicionar Imagens</button>
        <button class="save-button" id="save-button">Salvar Feed</button>
    </div>
    
    <div class="feed" id="sortable-container">
        <!-- O grid será preenchido com imagens carregadas pelo botão "Adicionar Imagens" -->
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
    <script>
        let selectedImages = []; // Array para armazenar as imagens selecionadas

        // Função para adicionar imagens ao grid
        function addImagesToGrid(images) {
            const gridItems = images.map((imageSrc, index) => {
                const gridItem = $('<div class="grid-item"></div>');
                const imgElement = $('<img>');
                imgElement.attr('src', imageSrc);
                imgElement.attr('data-index', index);
                gridItem.append(imgElement);

                const deleteButton = $('<button class="delete-button" id="delete-button" onclick="deleteImage(this)">Excluir</button>');
                deleteButton.attr('data-index', index);
                gridItem.append(deleteButton);

                return gridItem[0];
            });

            $("#sortable-container").prepend(gridItems);
            makeImagesDraggable();
        }

        // Quando o botão "Adicionar Imagens" for clicado
        $("#add-button").on('click', function () {
            const fileInput = $('<input type="file" accept="image/*" multiple>');
            fileInput.on('change', function () {
                selectedImages = [];
                for (let i = 0; i < fileInput[0].files.length; i++) {
                    const file = fileInput[0].files[i];
                    const objectURL = URL.createObjectURL(file);
                    selectedImages.push(objectURL);
                }
                addImagesToGrid(selectedImages);
            });
            fileInput.click();
        });

        // Quando a tecla Delete for pressionada, remover a imagem selecionada
        function deleteImage(button) {
            const index = $(button).data('index');
            $(button).closest(".grid-item").remove();
            selectedImages.splice(index, 1);
        }

        // Quando o botão "Salvar Feed” for clicado
        $("#save-button").on('click', function () {
            // Ocultar os botões antes de capturar a página
            $(".add-button, .save-button, .profile-info, #delete-button").hide();
            html2canvas(document.body).then(function(canvas) {
                const imgData = canvas.toDataURL('image/png');
                const a = document.createElement('a');
                a.href = imgData;
                a.download = 'feed.png';
                a.click();
                // Restaurar a visibilidade dos botões
                $(".add-button, .save-button, .profile-info, #delete-button").show();
            });
        });

        function makeImagesDraggable() {
            $("#sortable-container").sortable({
                items: ".grid-item",
                revert: false,
                tolerance: "pointer",
            });
        }
    </script>
</body>
</html>
